@page
@model MowiTajm.Pages.Admin.IndexModel

@{
    ViewData["Title"] = "Manage Users";
}

<h2>Manage Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>User</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            var userRole = Model.UserRoles.ContainsKey(user.Id) ? Model.UserRoles[user.Id] : "No Role";

            <tr>
                <td>@user.UserName</td>
                <td>@userRole</td>
                <td>
                    <form method="post" asp-page-handler="UpdateRole" asp-route-userId="@user.Id" asp-route-newRole="@(userRole == "Admin" ? "User" : "Admin")">
                        <button type="submit" class="btn btn-primary">
                            Change to @((userRole == "Admin") ? "User" : "Admin")
                        </button>
                    </form>
                    <form method="post" asp-page-handler="DeleteUser" asp-route-userId="@user.Id">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?')">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>