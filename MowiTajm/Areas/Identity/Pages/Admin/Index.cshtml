@page
@model IndexModel
@{
    ViewData["Title"] = "Admin";
}

<div class="page-content-container">

    <h2>Admin</h2>

    <!-- Två knappar för att hantera användare eller recensioner -->
    <form class="admin-main-buttons" method="post">
        <button type="submit" asp-page-handler="LoadUsers" class="btn-design btn-black">
            Hantera användare
        </button>
        <button type="submit" asp-page-handler="LoadReviews" class="btn-design btn-black">
            Hantera recensioner
        </button>
    </form>

    @if (!Model.ShowReviews)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>E-Post</th>
                    <th>Användarnamn</th>
                    <th>Roll</th>
                    <th class="center-stuff">Hantera</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    var userRole = Model.UserRoles.ContainsKey(user.Id) ? Model.UserRoles[user.Id] : "Ingen roll";

                    <tr>
                        <td>@user.UserName</td>
						<td>@user.DisplayName</td>
                        <td>@userRole</td>
                        <td class="orientation-row center-stuff">
                            <form method="post" asp-page-handler="UpdateRole" asp-route-userId="@user.Id" asp-route-newRole="@(userRole == "Admin" ? "User" : "Admin")">
                                <button type="submit" class="btn-design btn-purple">
                                    Ändra till @((userRole == "Admin") ? "User" : "Admin")
                                </button>
                            </form>
                            <form method="post" asp-page-handler="DeleteUser" asp-route-userId="@user.Id">
                                <button type="submit" class="btn-design btn-red" title="Ta bort användaren" aria-label="Ta bort användaren" onclick="return confirm('Är du säker att du vill ta bort denna användare?')">
                                    ⛌
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Titel</th>
                    <th>Recension</th>
                    <th>Betyg</th>
                    <th>Användare</th>
                    <th>Datum</th>
                    <th>Hantera</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var review in Model.Reviews)
                {
                    <tr>
                        <td>@review.Title</td>
                        <td>@review.Text</td>
                        <td>@review.Rating / 5</td>
                        <td>@review.Username</td>
                        <td>@review.DateTime.ToShortDateString()</td>
                        <td>
                            <form method="post" asp-page-handler="DeleteReview" asp-route-reviewId="@review.Id">
                                <button type="submit" class="btn-design btn-red" title="Ta bort recension" aria-label="Ta bort recension" onclick="return confirm('Är du säker att du vill ta bort denna recension?')">
                                    ⛌
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>